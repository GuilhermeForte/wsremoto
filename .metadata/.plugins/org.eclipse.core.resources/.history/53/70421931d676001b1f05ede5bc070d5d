package repetição;

import javax.swing.JOptionPane;

public class Exercicio4 {

	public static void main(String[] args) {
		String nome, nomev, nomen;
		short idade, idadev=0, idaden=0;
		double soma, idades=0, media=0;
		int count=0,count1=0, maiores=0;
		do {
			nome=JOptionPane.showInputDialog("Digite nome").toUpperCase();
			idade=Short.parseShort(JOptionPane.showInputDialog("digite idade"));
			if(idade>=18) {
				for(count=0;!nome.equals("SAIR");count++) {
					maiores=count;
				}
			}if(idade>idadev) {
				idadev=idade;
				nomev=nome;
			}else if(idade<idaden) {
				idaden=idade;
				nomen=nome;
			}
			soma=idades+idade;
			for(count1=0;!nome.equals("SAIR");count1++) {
				media=soma/count1;
			}
		}while(!nome.equals("SAIR"));
		System.out.println("Pessoa mais velha:"+nomev+" idade:"+idadev+"\nPessoa mais nova: "+nomen+" idade:"+idaden+"\nMaiores de idade: "+maiores+"\nMedia="+media);

	}

}
